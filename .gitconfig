  email = silviulucian@gmail.com

[alias]
  a = !"git config --get-regexp alias | cut -c 7- | sed 's| | => |'"
  b = branch
  ba = branch -a
  co = checkout
  cob = checkout -B # Switch to a branch, creating it if necessary
  c = commit -v
  p = !"git pull; git submodule foreach git pull origin master" # Pull in remote changes for the current repository and all its submodules
  pf = push --force-with-lease
  po = push origin
  ri = rebase --interactive
  s = status
  l = log --abbrev-commit --all --graph --decorate --date=relative
  unstage = reset HEAD --
  uncommit = reset --soft HEAD^ --
  unamend = reset --soft HEAD@{1} --

# Detect whitespace errors when applying a patch
[apply]
  whitespace = fix

# Use `origin` as the default remote on the `master` branch in all cases
[branch "master"]
  remote = origin
  merge = refs/heads/master

[branch]
  autosetuprebase = always # Avoid superfluous merge commits)

[pull]
  rebase = preserve

[push]
  default = simple

[rerere]
  enabled = true

[rebase]
  autosquash = true # Always use git rebase --interactive --autosquash: https://robots.thoughtbot.com/autosquashing-git-commits

[merge]
  log = true # Include summaries of merged commits in newly created merge commit messages

[core]
  # Use custom `.gitignore` and `.gitattributes`
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes
  # Treat spaces before tabs, lines that are indented with 8 or more spaces, and all kinds of trailing whitespace as an error
  # whitespace = space-before-tab,indent-with-non-tab,trailing-space

  # Tell git status to ignore permission changes
  filemode = false

  # Custom hooks path
  hooksPath = .githooks

# Use colors in Git commands that are capable of colored output when outputting to the terminal
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[filter "media"]
  clean = git-media-clean %f
  smudge = git-media-smudge %f

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
